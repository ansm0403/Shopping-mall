{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2022",
    "customConditions": ["@shopping-mall/source"],
    "baseUrl": ".",
    "paths": {
      "@mock/*": ["mocks/src/*"],
      "@shared/*": ["shared/src/*"],
      "@shared/types/*": ["shared/src/lib/types/*"],
      "@shared/utils/*": ["shared/src/lib/utils/*"]
    }
  }
}
